# avoid symbols that can confuse YAML or the shell, like $ or "

# PostgreSQL Credentials
POSTGRES_USER=shikshak_user
POSTGRES_PASSWORD=strong_secret_password
POSTGRES_DB=shikshak_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Database URL (compact, uses the above variables)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
# DATABASE_URL=postgresql://shikshak_user:your_strong_secret_password@localhost:5432/shikshak_db

# JWT Authentication
SECRET_KEY=a_very_secret_key_for_jwt_that_is_long_and_secure
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Gemini API
GEMINI_API_KEY=your_google_gemini_api_key_here
